# GreenSteps Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project dashboard: https://app.supabase.com
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: Supabase Service Role Key (for server-side operations)
# SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Application Configuration
# Base URL for your application (used for redirects and absolute URLs)
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: Support email address for the contact form
# NUXT_PUBLIC_SUPPORT_EMAIL=support@greensteps.app

# Development Configuration
# Enable debug logging in development
# NUXT_PUBLIC_DEBUG=true

# Optional: Analytics and tracking
# NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# NUXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Optional: Feature flags
# NUXT_PUBLIC_ENABLE_MOCK_DATA=false